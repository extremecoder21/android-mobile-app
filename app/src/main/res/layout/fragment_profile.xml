<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginBottom="10dp"
    android:backgroundTint="#edeeed"
tools:context="com.affinistechnologies.jamrocksingles.jamrocksingles.fragments.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/profileRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/backgroundHeader"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/user_profile_background" />
            <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/backgroundHeader"
            android:src="@drawable/taylor_swift_spl811605_"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:layout_marginTop="-40dp"/>
            <android.support.v7.widget.CardView
                android:id="@+id/profile_summary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:layout_below="@+id/profile_image">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:gravity="top|center_horizontal"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/userName"
                        android:layout_below="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Taylor Swift" />
                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_below="@id/userName"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/photo_album_preview"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:layout_below="@+id/profile_summary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:gravity="top|center_horizontal"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/number_of_profile_views"
                        android:layout_below="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:text="Who's viewed your profile"
                        android:layout_marginRight="10dp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="10dp"
                        android:background="#CCCCCC" />
                    <TextView
                        android:id="@+id/number_of_messages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_below="@id/number_of_profile_views"
                        android:text="Hypes of you" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:layout_below="@+id/photo_album_preview">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="top|center_horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:layout_below="@+id/imageView"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:background="@drawable/swift"
                            android:layout_marginRight="10dp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10dp"
                            android:background="#CCCCCC" />
                        <ImageView
                            android:layout_below="@+id/imageView"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:background="@drawable/swift"
                            android:layout_marginRight="10dp"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10dp"
                            android:background="#CCCCCC" />
                        <ImageView
                            android:layout_below="@+id/imageView"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:background="@drawable/swift"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/album_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Rumors (30 Photos)" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_edit" />
</FrameLayout>