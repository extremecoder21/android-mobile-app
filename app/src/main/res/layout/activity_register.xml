<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.affinistechnologies.jamrocksingles.jamrocksingles.activities.RegisterActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dp"
        android:layout_marginTop="0.0dp"
        android:id="@+id/userNameLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        >
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="User Name"
            android:drawableLeft="@drawable/ic_account_box_black_18dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dp"
        android:layout_marginTop="0.0dp"
        android:id="@+id/emailAddrssLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userNameLayout">
    <EditText
        android:id="@+id/emailAddrss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_account_box_black_18dp"
       />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dp"
        android:layout_marginTop="0.0dp"
        android:id="@+id/user_passwordLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/emailAddrssLayout">
        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_https_black_18dp"
           />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dp"
        android:layout_marginTop="0.0dp"
        android:id="@+id/age_dobLayout"
        android:layout_below="@+id/user_passwordLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Birth Date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >
        <EditText
            android:id="@+id/age_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableLeft="@drawable/ic_perm_contact_calendar_black_18dp"
           />
    </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/txtGender"
            android:text="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_below="@+id/age_dobLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:textSize="16dp"
            android:layout_marginLeft="11dp"
            android:layout_alignParentLeft="true" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/gender_group"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtGender"
        android:layout_toEndOf="@+id/txtGender"
        android:layout_below="@+id/age_dobLayout"
        android:layout_alignRight="@+id/txtGender"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true">
        <RadioButton
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/femaleRadioButton"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/gender_group"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@+id/gender_group" />
        <RadioButton
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maleRadioButton"
            android:layout_alignBaseline="@+id/femaleRadioButton"
            android:layout_alignBottom="@+id/femaleRadioButton"
            android:layout_marginLeft="10dp" />
    </RadioGroup>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ckboxCertify"
        android:layout_below="@+id/gender_group"
        android:layout_alignStart="@+id/txtGender"
        android:layout_alignLeft="@+id/txtGender" />
    <TextView
        android:text="I have read and agree to the Terms of Use, and Privacy Agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender_group"
        android:layout_toRightOf="@+id/ckboxCertify"
        android:layout_marginStart="26dp"
        android:id="@+id/txtCertify"
        android:layout_marginLeft="26dp" />
    <Button
        android:text="Sign Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCertify"
        android:layout_marginTop="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:id="@+id/btnSignUp"
        android:layout_alignStart="@+id/ckboxCertify"
        android:layout_alignEnd="@+id/txtCertify"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/ckboxCertify"
        android:layout_alignRight="@+id/txtCertify" />
</RelativeLayout>
</ScrollView>